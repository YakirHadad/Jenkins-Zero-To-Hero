pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    // Run npm install and npm test inside a Node.js Docker container
                    docker.image('node:14').inside('-v $PWD:/app') {
                        sh 'cd /app && npm install'
                        sh 'cd /app && npm test'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Your deployment steps
                    // This section is a placeholder; customize it based on your deployment strategy
                }
            }
        }
    }
}
